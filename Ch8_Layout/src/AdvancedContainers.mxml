					width="100%" 
					height="100%"
					label="1 (spanning two columns)"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Button 
					width="100%" 
					height="100%"
					label="2"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" rowSpan="2">
				<mx:Button 
					width="100%" 
					height="100%"
					label="3 (spanning two rows)"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Button 
					width="100%" 
					height="100%"
					label="4"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Button 
					width="100%" 
					height="100%"
					label="5"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%">
				<mx:Button 
					width="100%" 
					height="100%"
					label="6"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Button 
					width="100%" 
					height="100%"
					label="7"/>
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
		
		
	<mx:Tile 
		width="100%" 
		height="100%">
		<mx:Button 
			label="One"/>
		<mx:Button 
			label="Two"/>
		<mx:Button 
			label="Three"/>
		<mx:Button 
			label="Four"/>
		<mx:Button 
			label="Five"/>
		<mx:Button 
			label="Six"/>
		<mx:Button 
			label="Seven"/>
	</mx:Tile>
	
</mx:HDividedBox>



</mx:Application>
